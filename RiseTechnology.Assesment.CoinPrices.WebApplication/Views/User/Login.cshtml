@{
    ViewData["Title"] = "Login";
}
@section Scripts{
    <script src="~/js/user-management/login.js"></script>
}
<div class="container col-3 align-content-center border mt-5 p-3">
    <form>
        <div class="form-group ">
            <label for="email">Email address</label>
            <input type="email" name="Username" class="form-control" id="username" aria-describedby="email" placeholder="Enter email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="Password" class="form-control" id="password" placeholder="Password" required>
            <div class="feedback" style="font-size:11px" id="login-feedback"></div>
        </div>
        <div class="form-group mt-2">
            <a class="link-primary" href="/register">Register</a>
        </div>
        <button id="submitbutton" type="submit" class="btn btn-primary mt-3">Login</button>
    </form>
</div>